<% if current_user %>
  <div class="row">
    <div class="col-md-6">
      <h2 class="float-right">
        <%= current_user.name %><%= @images.any? ? ", here are your images!" : ", upload some images >>" %>
      </h2>
    </div>
    <div class="col-md-6" style="text-align: center">
      <%= link_to "Upload new Image", new_image_path, class: "btn btn-primary" %>
    </div>
  </div>
  <%= render 'image' %>
<% else %>
  <div style="text-align:center">
    <%= link_to "Create an Account", new_user_registration_path, class: "btn btn-secondary btn-lg" %>
  </div>
  <hr>
  <div style="text-align:center">
    <%= link_to "Sign into your Account", new_user_session_path, class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>